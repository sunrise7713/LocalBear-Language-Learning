<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#221910">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved Sentences"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:fontFamily="sans-serif-black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage your collection"
            android:textColor="#cbad90"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etSearchSaved"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_edittext_bg"
            android:hint="Search saved phrases..."
            android:paddingStart="45dp"
            android:paddingEnd="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#cbad90"
            android:textSize="14sp"
            android:inputType="text"
            android:importantForAutofill="no" />
    </LinearLayout>



        <HorizontalScrollView
            android:id="@+id/filterScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:clipToPadding="false"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFilterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="âœ“ All"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/gradient_button_bg"
                    android:paddingHorizontal="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFilterDaily"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:text=" Daily"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/gradient_button_bg"
                    android:paddingHorizontal="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFilterShopping"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:text=" Shopping"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/gradient_button_bg"
                    android:paddingHorizontal="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFilterAirport"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:text=" Airport"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/gradient_button_bg"
                    android:paddingHorizontal="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFilterTravel"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:text=" Travel"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/gradient_button_bg"
                    android:paddingHorizontal="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFilterHotel"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:text=" Hotel"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/gradient_button_bg"
                    android:paddingHorizontal="20dp" />

            </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavorites"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/filterScroll"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        style="@style/CustomBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
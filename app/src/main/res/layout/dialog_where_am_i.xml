<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"
    android:padding="24dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="#33FFFFFF"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvQuestionCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="QUESTION 1/10"
        android:textColor="@color/accent_pink"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvQuestionSentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="I would like to order a coffee, please."
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Select the correct location"
        android:textColor="#66FFFFFF"
        android:textSize="14sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:columnCount="2"
        android:alignmentMode="alignMargins">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOption1"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#2D231A"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:strokeColor="#26FFFFFF"
            app:strokeWidth="1dp"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:id="@+id/btnOption1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOption2"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#2D231A"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:strokeColor="#26FFFFFF"
            app:strokeWidth="1dp"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:id="@+id/btnOption2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOption3"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#2D231A"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:strokeColor="#26FFFFFF"
            app:strokeWidth="1dp"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:id="@+id/btnOption3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOption4"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#2D231A"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:strokeColor="#26FFFFFF"
            app:strokeWidth="1dp"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:id="@+id/btnOption4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingBottom="16dp">
    </RelativeLayout>
</LinearLayout>
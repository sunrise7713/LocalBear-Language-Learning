<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#221910"
    android:padding="24dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnCheckAnswer"
        android:layout_marginBottom="124dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:background="#33FFFFFF" />

            <TextView
                android:id="@+id/tvHunterCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quest 1/10"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reconstruct the sentence below"
                android:textColor="#90A7CB"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/hunterProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="20dp"
                android:progressDrawable="@drawable/custom_progress_blue" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgSelectedWords"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/dash_border_bg"
                android:padding="12dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:letterSpacing="0.1"
                android:text="TAP WORDS TO SELECT"
                android:textColor="#66FFFFFF"
                android:textSize="11sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgWordPool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="10dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCheckAnswer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="104dp"
        android:background="@drawable/gradient_blue_rounded"
        android:text="Check Answer"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>